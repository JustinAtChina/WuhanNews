<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dffcfa"
    android:orientation="vertical"
    >
    <com.ab.view.sliding.AbSlidingPlayView
        android:id="@+id/mAbSlidingPlayView"
        android:layout_width="fill_parent"
        android:layout_height="216dip" >
    </com.ab.view.sliding.AbSlidingPlayView>


<LinearLayout
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingLeft="16dp"
    android:background="#dffcfa"
    android:paddingRight="16dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/news_list_img"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerCrop"
        android:src="@drawable/app_logo"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/news_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:gravity="center_vertical|left"
            android:ellipsize="end"
            android:maxLines="2"
            android:lines="2"
            android:text="测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/news_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="2015-01-21"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#999999"/>

            <TextView
                android:id="@+id/news_list_icon"
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:paddingLeft="2dp"
                android:text="校园"
                android:textSize="8sp"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:background="@drawable/type_campus" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
